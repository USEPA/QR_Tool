#: import random random

<MainScreenWidget>:
    id: main
    orientation: 'vertical'
    RecycleLabel:
        id: screen_label
        size_hint_y: 1
        height: self.parent.height
        text_size: (self.parent.width, None)
        text: f"\n\n[size=50][u][color=#009999]QR TOOLBOX[/color][/size][/u]\n\n\n\n\n\n[size=30]QR Toolbox v1.4\n\nUSEPA Homeland Security Research Program\n\nSystem ID: {root.sys_id}[/size]\n"
        font_size: 18
        halign: 'center'
        valign: 'middle'
        padding: (10, 10)
        markup: True
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: 50
        padding: (3, 0)
        spacing: 3
        Button:
            id: qrreader
            text: "QR Reader"
            font_size: 13
            color: (0, 0, 0, 1)
            background_color: (255, 255, 255, 1)
            on_release: root.qr_reader()
        Button:
            id: qrcreatorb
            text: "QR Creator - Batch"
            font_size: 13
            color: (0, 0, 0, 1)
            background_color: (255, 255, 255, 1)
            on_release: root.qr_batch()
        Button:
            id: qrcreators
            text: "QR Creator - Single"
            font_size: 13
            color: (0, 0, 0, 1)
            background_color: (255, 255, 255, 1)
            on_release: root.qr_single()
        Button:
            id: setup
            text: "Setup"
            font_size: 13
            color: (0, 0, 0, 1)
            background_color: (255, 255, 255, 1)
            on_release: root.setup()
        Button:
            id: aboutcredits
            text: "About/Credits"
            font_size: 13
            color: (0, 0, 0, 1)
            background_color: (255, 255, 255, 1)
            on_release: root.about()
        Button:
            id: exit
            text: "Exit"
            font_size: 13
            color: (0, 0, 0, 1)
            background_color: (255, 255, 255, 1)
            on_release: root.exit()

<RestartSessionWidget>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            id: test
            text: "New session (all previous data will be deleted)"
            size_hint: None, None
            size: 350, 100
            on_release: root.set_check_storage(False)
            on_release: root.restart_popup.dismiss()
        Button:
            text: "Restart previous session"
            size_hint: None, None
            size: 350, 100
            on_release: root.set_check_storage(True)
            on_release: root.restart_popup.dismiss()

<SetupWidget>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Upload/Consolidate"
            size_hint: None, None
            size: 225, 100
            on_release: root.upload_consolidate()
            on_release: root.setup_popup.dismiss()
        Button:
            text: "Change Camera Source"
            size_hint: None, None
            size: 225, 100
            on_release: root.change_camera_source()
            on_release: root.setup_popup.dismiss()
        Button:
            text: "Change Storage (Local/Online)"
            size_hint: None, None
            size: 225, 100
            on_release: root.change_storage_location()
            on_release: root.setup_popup.dismiss()
        Button:
            text: "Set/Adjust Timer"
            size_hint: None, None
            size: 225, 100
            on_release: root.set_timer_popup()
            on_release: root.setup_popup.dismiss()

<StorageWidget>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: root.text
        Button:
            text: "Local (Specify a location on the computer)"
            on_release: root.set_storage(True)
            on_release: root.storage_popup.dismiss()
        Button:
            text: "Online (ArcGIS)"
            on_release: root.set_storage(False)
            on_release: root.storage_popup.dismiss()

<CameraWidget>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: "Integrated Webcam"
            size_hint: None, None
            size: 235, 100
            on_release: root.set_camera("Integrated")
            on_release: root.camera_popup.dismiss()
        Button:
            text: "Separate Webcam"
            size_hint: None, None
            size: 235, 100
            on_release: root.set_camera("Separate")
            on_release: root.camera_popup.dismiss()
        Button:
            text: "PiCamera"
            size_hint: None, None
            size: 235, 100
            disabled: True
            on_release: root.set_camera("PiCamera")
            on_release: root.camera_popup.dismiss()

<TimerWidget>:
    orientation: 'vertical'
    padding: (0, 5)
    TextInput:
        id: timer_input
        use_bubble: True
        use_handles: True
        size: 150, 80
        input_filter: 'int'
        hint_text: '30'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: "OK"
            size_hint: None, None
            size: 150, 55
            on_release: root.set_timer(timer_input.text)
            on_release: root.timer_popup.dismiss()
        Button:
            text: "Cancel"
            size_hint: None, None
            size: 150, 55
            on_release: root.timer_popup.dismiss()

<TimerAlertWidget>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            id: timer_alert_widget
            text: "Acknowledge"
            size_hint: None, None
            size: 395, 70
            on_release: root.alert_acknowledged()
            on_release: root.timer_alert_widget_popup.dismiss()

<QRSingleWidget>:
    orientation: 'vertical'
    padding: (0, 5)
    TextInput:
        id: input
        use_bubble: True
        use_handles: True
        size: 300, 80
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: "OK"
            size_hint: None, None
            size: 150, 75
            on_release: root.setup_qr_single(input.text)
            on_release: root.qr_single_popup.dismiss()
        Button:
            text: "Cancel"
            size_hint: None, None
            size: 150, 75
            on_release: root.qr_single_popup.dismiss()

<LoginWidget>:
    orientation: 'vertical'
    padding: (0, 5)
    TextInput:
        id: username
        use_bubble: True
        use_handles: True
        hint_text: "Enter username"
        size: 300, 30
    TextInput:
        id: password
        use_bubble: True
        use_handles: True
        hint_text: "Enter password"
        password: True
        size: 300, 30
    BoxLayout:
        orientation: 'horizontal'
        Button:
            text: "OK"
            size_hint: None, None
            size: 150, 65
            on_release: root.sign_in(username.text, password.text)
            on_release: root.login_popup.dismiss()
        Button:
            text: "Cancel"
            size_hint: None, None
            size: 150, 65
            on_release: root.login_popup.dismiss()

<ExitWidget>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        Button:
            id: exit_widget
            text: "Yes"
            size_hint: None, None
            size: 195, 70
            on_release: root.confirm_exit()
            on_release: root.exit_widget_popup.dismiss()
        Button:
            text: "No"
            size_hint: None, None
            size: 195, 70
            on_release: root.exit_widget_popup.dismiss()